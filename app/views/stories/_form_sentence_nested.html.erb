<%= f.fields_for :sentences do |ff| %>
  <%= ff.hidden_field(:image_id, value: @story_image.id) %>
  <div class="form-group">
    <%= ff.label :content, 'Sentence', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= ff.text_area :content, class: 'form-control', placeholder: 'Write your first sentence!' %>
    </div>
  </div>
  <div class="form-group">
    <%= ff.label :author, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= ff.text_field :author, class: 'form-control', placeholder: 'Your Name' %>
    </div>
  </div>
<% end %>
