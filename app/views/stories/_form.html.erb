<%= render 'layouts/errors', object: @story %>

<%= form_for @story, html: {class: 'form-horizontal'} do |f| %>
<div class="form-group">
  <%= f.label :title, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :title, class: 'form-control', placeholder: 'Your Title Here' %>
  </div>
</div>
<%= f.fields_for :sentences do |ff| %>
  <div class="form-group">
    <%= ff.label :content, 'Sentence', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= ff.text_area :content, class: 'form-control', placeholder: 'Write your first sentence!' %>
    </div>
  </div>
  <div class="form-group">
    <%= ff.label :author, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= ff.text_field :author, class: 'form-control', placeholder: 'Your Name' %>
    </div>
  </div>
<% end %>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
