<%= render 'layouts/errors', object: @story %>

<div class="row">
  <div class="story-image col-sm-offset-2 col-sm-2">
    <%= image_tag @story_image.filename %>
  </div>
  <div class="col-sm-8">
    <h3>Base your story on this image.</h3>
  </div>
</div>

<hr>
<%= form_for @story, html: {class: 'form-horizontal'} do |f| %>
<div class="form-group">
  <%= f.label :title, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :title, class: 'form-control', placeholder: 'Your Title Here' %>
  </div>
</div>
<% if @creating_new_story %>
  <%= render 'form_sentence_nested', f: f %>
<% end %>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
