<%= render 'layouts/errors', object: @sentence %>

<%= form_for [@story, @sentence], html: {class: 'form-horizontal'} do |f| %>
<div class="form-group">
  <%= f.label :content, 'Sentence', class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_area :content, class: 'form-control', placeholder: 'Write your sentence!' %>
  </div>
</div>
<div class="form-group">
  <%= f.label :author, class: 'col-sm-2 control-label' %>
  <div class="col-sm-10">
    <%= f.text_field :author, class: 'form-control', placeholder: 'Your Name' %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
</div>
<% end %>
